<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hink.hinkling"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="com.google.cloud.backend.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hink.hinkling.SplashScreen"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hink.hinkling.Login"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:permission="com.hink.hinkling.LAUNCHACTIVITY"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="com.hink.hinkling.Login" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hink.hinkling.Call_camera"
            android:label="@string/title_activity_call_camera" >
        </activity>
        <activity
            android:name="com.hink.hinkling.MainActivity"
            android:label="@string/title_activity_main"
            android:launchMode="standard"
            android:permission="com.hink.hinkling.LAUNCHACTIVITY"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="com.hink.hinkling.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hink.hinkling.Settings"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.hink.hinkling.GameSession"
            android:label="@string/title_activity_game_session" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Audio"
            android:label="@string/title_activity_audio" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Help"
            android:label="@string/title_activity_help" >
        </activity>
        <activity
            android:name="com.hink.hinkling.MyPlaybackService"
            android:label="@string/title_activity_my_playback_service" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Round"
            android:label="@string/title_activity_round" >
        </activity>
        <activity
            android:name="com.hink.hinkling.RoundOne"
            android:label="@string/title_activity_round_one" >
        </activity>
        <activity
            android:name="com.hink.hinkling.PreGameSession"
            android:label="@string/title_activity_pre_game_session" >
        </activity>
        <activity
            android:name="com.hink.hinkling.PlayerSearch"
            android:label="@string/title_activity_player_search" >
        </activity>
        <activity
            android:name="com.hink.hinkling.SMRoundOne"
            android:label="@string/title_activity_smround_one" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Loser"
            android:label="@string/app_name"
            android:launchMode="standard"
            android:permission="com.hink.hinkling.LAUNCHACTIVITY"
            android:screenOrientation="unspecified" >
            <intent-filter>
                <action android:name="com.hink.hinkling.Loser" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hink.hinkling.EndGameSession"
            android:label="@string/title_activity_end_game_session" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Subject"
            android:label="@string/title_activity_subject" >
        </activity>
        <activity
            android:name="com.hink.hinkling.GameOne"
            android:label="@string/title_activity_game_one" >
        </activity>
        <activity
            android:name="com.hink.hinkling.ViewProfile"
            android:label="@string/title_activity_view_profile" >
        </activity>
        <activity
            android:name="com.hink.hinkling.CreateProfile"
            android:label="@string/title_activity_create_profile" >
        </activity>
        <activity
            android:name="com.hink.hinkling.Chat"
            android:label="@string/title_activity_chat" >
        </activity>
        <activity
            android:name="com.hink.hinkling.SettingsDialog"
            android:label="@string/title_activity_settings_dialog" >
        </activity>
        <activity
            android:name="com.hink.hinkling.XMPPChat"
            android:label="@string/xmppchat" >
        </activity>

        <service android:name="com.google.cloud.backend.GCMIntentService" />

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.google.cloud.solutions.sampleapps.mobilebackend" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.cloud.backend.GCMIntentService" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />

        <activity
            android:name="com.hink.hinkling.ScreenClearMiniGame"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_screen_clear_mini_game" >
        </activity>
    </application>

</manifest>